{
  "name": "assert-throws",
  "version": "2.1.0",
  "description": "A JavaScript assertion method to check if a sync or async function throws.",
  "main": "build",
  "scripts": {
    "t": "zoroaster -a",
    "test": "yarn t test/spec",
    "test-build": "ALAMODE_ENV=test-build zoroaster test/spec --babel",
    "doc": "NODE_DEBUG=doc doc documentary -o README.md",
    "b": "alamode src --out-dir build",
    "build": "yarn-s doc b",
    "example": "node example"
  },
  "files": [
    "build",
    "es5"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/artdecocode/assert-throws.git"
  },
  "keywords": [
    "assert-throws",
    "assertion",
    "throws",
    "throw",
    "error",
    "try",
    "catch"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artdecocode/assert-throws/issues"
  },
  "homepage": "https://github.com/artdecocode/assert-throws#readme",
  "devDependencies": {
    "alamode": "1.4.0",
    "documentary": "1.11.0",
    "snapshot-context": "2.0.4",
    "yarn-s": "1.1.0",
    "zoroaster": "3.0.0"
  },
  "dependencies": {
    "erotic": "2.0.0",
    "erte": "1.1.4"
  }
}
