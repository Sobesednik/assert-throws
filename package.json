{
  "name": "assert-throws",
  "version": "1.3.1",
  "description": "A JavaScript assertion method to check if a sync or async function throws.",
  "main": "build",
  "scripts": {
    "build": "babel src --out-dir build",
    "t": "zoroaster --babel",
    "test": "zoroaster test/spec --babel",
    "test-watch": "zoroaster test/spec --babel --watch",
    "test-build": "LIB_MAIN=../.. zoroaster test/spec --babel",
    "test-es5": "LIB_MAIN=../../es5 zoroaster test/spec --babel",
    "test-all": "yarn-s test test-build test-es5",
    "example": "node example"
  },
  "files": [
    "build",
    "es5"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/artdecocode/assert-throws.git"
  },
  "keywords": [
    "assertion",
    "throws",
    "throw",
    "error",
    "assert-throws"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artdecocode/assert-throws/issues"
  },
  "homepage": "https://github.com/artdecocode/assert-throws#readme",
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.46",
    "@babel/core": "7.0.0-beta.46",
    "@babel/plugin-syntax-object-rest-spread": "7.0.0-beta.46",
    "@babel/plugin-transform-modules-commonjs": "7.0.0-beta.46",
    "@babel/register": "7.0.0-beta.46",
    "snapshot-context": "1.1.2",
    "yarn-s": "1.1.0",
    "zoroaster": "1.1.0"
  },
  "dependencies": {
    "erte": "1.1.1"
  }
}
